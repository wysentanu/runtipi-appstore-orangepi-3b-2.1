{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "immich",
      "image": "ghcr.io/immich-app/immich-server:v2.5.0",
      "isMain": true,
      "internalPort": 2283,
      "securityOpt": [
        "systempaths=unconfined",
        "apparmor=unconfined"
      ],
      "devices": [
        "/dev/rga:/dev/rga",
        "/dev/dri:/dev/dri",
        "/dev/dma_heap:/dev/dma_heap",
        "/dev/mpp_service:/dev/mpp_service"
      ],
      "volumes": [
        {
          "hostPath": "${DATA_LOCATION}",
          "containerPath": "/data"
        },
        {
          "hostPath": "${LIBRARY_LOCATION}",
          "containerPath": "/data/library"
        },
        {
          "hostPath": "${ADMIN_LIBRARY_LOCATION}",
          "containerPath": "/data/library/admin"
        },
        {
          "hostPath": "${ENCODED_VIDEO_LOCATION}",
          "containerPath": "/data/encoded-video"
        },
        {
          "hostPath": "${BACKUP_LOCATION}",
          "containerPath": "/data/backups"
        },
        {
          "hostPath": "/etc/OpenCL",
          "containerPath": "/etc/OpenCL:ro"
        },
        {
          "hostPath": "/usr/lib/aarch64-linux-gnu/libmali.so.1",
          "containerPath": "/usr/lib/aarch64-linux-gnu/libmali.so.1:ro"
        },
        {
          "hostPath": "/etc/localtime",
          "containerPath": "/etc/localtime:ro"
        }
      ],
      "environment": [
        {
          "key": "NODE_ENV",
          "value": "production"
        },
        {
          "key": "DB_HOSTNAME",
          "value": "immich-db"
        },
        {
          "key": "DB_USERNAME",
          "value": "tipi"
        },
        {
          "key": "DB_PASSWORD",
          "value": "${DB_PASSWORD}"
        },
        {
          "key": "ENABLE_MAPBOX",
          "value": "false"
        },
        {
          "key": "DB_DATABASE_NAME",
          "value": "immich"
        },
        {
          "key": "REDIS_HOSTNAME",
          "value": "immich-redis"
        },
        {
          "key": "JWT_SECRET",
          "value": "${JWT_SECRET}"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "DATA_LOCATION",
          "value": "${DATA_LOCATION}"
        },
        {
          "key": "LIBRARY_LOCATION",
          "value": "${LIBRARY_LOCATION}"
        },
        {
          "key": "ADMIN_LIBRARY_LOCATION",
          "value": "${ADMIN_LIBRARY_LOCATION}"
        },
        {
          "key": "ENCODED_VIDEO_LOCATION",
          "value": "${ENCODED_VIDEO_LOCATION}"
        },
        {
          "key": "BACKUP_LOCATION",
          "value": "${BACKUP_LOCATION}"
        }
      ],
      "dependsOn": ["immich-redis", "immich-db"]
    },
    {
      "name": "immich-machine-learning",
      "image": "ghcr.io/immich-app/immich-machine-learning:v2.5.0-rknn",
      "securityOpt": [
        "systempaths=unconfined",
        "apparmor=unconfined"
      ],
      "devices": [
        "/dev/dri:/dev/dri"
      ],
      "volumes": [
        {
          "hostPath": "${DATA_LOCATION}",
          "containerPath": "/data"
        },
        {
          "hostPath": "${LIBRARY_LOCATION}",
          "containerPath": "/data/library"
        },
        {
          "hostPath": "${ADMIN_LIBRARY_LOCATION}",
          "containerPath": "/data/library/admin"
        },
        {
          "hostPath": "${ENCODED_VIDEO_LOCATION}",
          "containerPath": "/data/encoded-video"
        },
        {
          "hostPath": "${IMMICH_ML_CACHE_LOCATION}",
          "containerPath": "/cache"
        }
      ],
      "environment": [
        {
          "key": "MACHINE_LEARNING_RKNN_THREADS",
          "value": "2"
        },
        {
          "key": "NODE_ENV",
          "value": "production"
        },
        {
          "key": "DB_HOSTNAME",
          "value": "immich-db"
        },
        {
          "key": "DB_USERNAME",
          "value": "tipi"
        },
        {
          "key": "DB_PASSWORD",
          "value": "${DB_PASSWORD}"
        },
        {
          "key": "DB_NAME",
          "value": "immich"
        },
        {
          "key": "DB_DATABASE_NAME",
          "value": "immich"
        },
        {
          "key": "DATA_LOCATION",
          "value": "${DATA_LOCATION}"
        },
        {
          "key": "LIBRARY_LOCATION",
          "value": "${LIBRARY_LOCATION}"
        },
        {
          "key": "ADMIN_LIBRARY_LOCATION",
          "value": "${ADMIN_LIBRARY_LOCATION}"
        },
        {
          "key": "ENCODED_VIDEO_LOCATION",
          "value": "${ENCODED_VIDEO_LOCATION}"
        },
        {
          "key": "BACKUP_LOCATION",
          "value": "${BACKUP_LOCATION}"
        },
        {
          "key": "IMMICH_ML_CACHE_LOCATION",
          "value": "${IMMICH_ML_CACHE_LOCATION}"
        }
      ],
      "dependsOn": ["immich-db"]
    },
    {
      "name": "immich-redis",
      "image": "docker.io/valkey/valkey:9",
      "healthCheck": {
        "test": "redis-cli ping || exit 1"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/redis",
          "containerPath": "/data"
        }
      ]
    },
    {
      "name": "immich-db",
      "image": "ghcr.io/immich-app/postgres:14-vectorchord0.4.3-pgvectors0.2.0",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "environment": [
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${DB_PASSWORD}"
        },
        {
          "key": "POSTGRES_USER",
          "value": "tipi"
        },
        {
          "key": "POSTGRES_DB",
          "value": "immich"
        },
        {
          "key": "PG_DATA",
          "value": "/var/lib/postgresql/data"
        }
      ]
    }
  ]
}
