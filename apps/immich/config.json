{
  "$schema": "https://schemas.runtipi.io/v2/app-info.json",
  "name": "Immich",
  "id": "immich",
  "version": "v2.5.0",
  "tipi_version": 3,
  "available": true,
  "exposable": true,
  "dynamic_config": true,
  "https": false,
  "port": 8128,
  "short_desc": "Photo and video backup solution directly from your mobile phone.",
  "description": "Photo and video backup solution directly from your mobile phone.",
  "author": "Alex Tran",
  "categories": ["data", "photography"],
  "source": "https://github.com/immich-app/immich",
  "website": "https://www.immich.app/",
  "supported_architectures": ["arm64", "amd64"],
  "created_at": 1765615557133,
  "updated_at": 1769566304139,
  "min_tipi_version": "4.5.0",
  "form_fields": [
    {
      "type": "random",
      "label": "DB_PASSWORD",
      "min": 32,
      "env_variable": "DB_PASSWORD"
    },
    {
      "type": "random",
      "label": "JWT_SECRET",
      "min": 32,
      "env_variable": "JWT_SECRET"
    },
    {
      "type": "random",
      "label": "IMMICH_TYPESENSE_API_KEY",
      "min": 32,
      "env_variable": "IMMICH_TYPESENSE_API_KEY"
    },
    {
      "type": "text",
      "label": "TZ",
      "required": true,
      "hint": "Timezone for application, see \"Tz Database\" format.",
      "placeholder": "Asia/Makassar",
      "default": "Asia/Makassar",
      "env_variable": "TZ"
    },
    {
      "type": "text",
      "label": "DATA_LOCATION",
      "required": false,
      "hint": "Immich main data location",
      "placeholder": "${DATA_FOLDER_HOST}/AppData/immich",
      "default": "${DATA_FOLDER_HOST}/AppData/immich",
      "env_variable": "DATA_LOCATION"
    },
    {
      "type": "text",
      "label": "LIBRARY_LOCATION",
      "required": false,
      "hint": "Immich base library location",
      "placeholder": "${DATA_FOLDER_HOST}/Gallery/ImmichLibrary",
      "default": "${DATA_FOLDER_HOST}/Gallery/ImmichLibrary",
      "env_variable": "LIBRARY_LOCATION"
    },
    {
      "type": "text",
      "label": "ADMIN_LIBRARY_LOCATION",
      "required": false,
      "hint": "Immich admin library location (primary account)",
      "placeholder": "${DATA_FOLDER_HOST}/Gallery",
      "default": "${DATA_FOLDER_HOST}/Gallery",
      "env_variable": "ADMIN_LIBRARY_LOCATION"
    },
    {
      "type": "text",
      "label": "ENCODED_VIDEO_LOCATION",
      "required": false,
      "hint": "Immich encoded video location",
      "placeholder": "${DATA_FOLDER_HOST}/Gallery/immich-encoded-video",
      "default": "${DATA_FOLDER_HOST}/Gallery/immich-encoded-video",
      "env_variable": "ENCODED_VIDEO_LOCATION"
    },
    {
      "type": "text",
      "label": "BACKUP_LOCATION",
      "required": false,
      "hint": "Immich backup files location",
      "placeholder": "${HOME_FOLDER_HOST}/backups",
      "default": "${HOME_FOLDER_HOST}/backups",
      "env_variable": "BACKUP_LOCATION"
    },
    {
      "type": "text",
      "label": "IMMICH_ML_CACHE_LOCATION",
      "required": false,
      "hint": "Immich Machine Learning Cache location",
      "placeholder": "${APP_DATA_DIR}/data/immich-ml-cache",
      "default": "${APP_DATA_DIR}/data/immich-ml-cache",
      "env_variable": "IMMICH_ML_CACHE_LOCATION"
    }
  ]
}
