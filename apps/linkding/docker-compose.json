{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "linkding",
      "image": "sissbruecker/linkding:1.44.2",
      "isMain": true,
      "internalPort": 9090,
      "volumes": [
        {
          "hostPath": "${LD_HOST_DATA_DIR}",
          "containerPath": "/etc/linkding/data"
        }
      ],
      "environment": [
        {
          "key": "LD_HOST_DATA_DIR",
          "value": "${LD_HOST_DATA_DIR}"
        },
        {
          "key": "LD_SUPERUSER_NAME",
          "value": "${LD_SUPERUSER_NAME}"
        },
        {
          "key": "LD_SUPERUSER_NAME",
          "value": "${LD_SUPERUSER_NAME}"
        },
        {
          "key": "LD_SUPERUSER_PASSWORD",
          "value": "${LD_SUPERUSER_PASSWORD}"
        },
        {
          "key": "LD_DISABLE_BACKGROUND_TASKS",
          "value": "${LD_DISABLE_BACKGROUND_TASKS}"
        },
        {
          "key": "LD_DISABLE_URL_VALIDATION",
          "value": "${LD_DISABLE_URL_VALIDATION}"
        }
      ]
    }
  ]
}
